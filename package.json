{
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "name": "askala_baseapp",
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "prebuild": "npm run prebuild --workspaces --if-present",
    "pretest": "npm run prebuild --workspaces --if-present",
    "start": "npm start --workspaces --if-present",
    "test": "npm test --workspaces --if-present",
    "generate:content-hash": "node build-scripts/generate-content-hash.js",
    "deploy:metadata": "dfx deploy --network ic --argument '(null)'",
    "verify:deployment": "dfx canister --network ic call askala_baseapp_backend verify_deployment"
  },
  "type": "module",
  "workspaces": [
    "src/askala_baseapp_frontend"
  ],
  "dependencies": {
    "fs": "^0.0.1-security",
    "glob": "^11.0.3"
  }
}
